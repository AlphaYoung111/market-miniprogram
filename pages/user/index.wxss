/* pages/user/index.wxss */

page {
  background-color: #edece8;
  
}

.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}

.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid greenyellow;
  color: #fff;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.user_info_wrap .user_img_wrap {
  position: relative;
}

.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  /* 高斯模糊 */
  filter: blur(10rpx);
}

.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}

.user_info_wrap .user_img_wrap .user_info image {
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
}

.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
  font-size: 35rpx;
}

/* 内容区域 */

.user_content {
  position: relative;
}

.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #555;
  padding-bottom: 100rpx;
}

.history_wrap {
  background-color: #fff;
  display: flex;
}

.history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}

.history_wrap navigator .his_num {
  color: var(--themeColor);
}

.history_wrap navigator .his_name {
}

.user_main .orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}

.user_main .orders_wrap  .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.user_main .orders_wrap  .orders_content {
  display: flex;
}

.user_main .orders_wrap  .orders_content navigator {
  flex: 1;
  padding: 15rpx 0;
  text-align: center;
}

.user_main .orders_wrap  .orders_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}

.user_main .orders_wrap  .orders_content navigator .order_name {
}

.user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}

.user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}

.user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.app_info_wrap .app_info_contact{
  display: flex;
  justify-content: space-between;
}
.user_main .recommend_wrap {
   margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
